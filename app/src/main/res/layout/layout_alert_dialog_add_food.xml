<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alertDialogAddFoodAdmin"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Adicione uma comida"
        android:textColor="@android:color/black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/editTextAlertDialogNameFoodAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Nome do alimento"/>

    <EditText
        android:id="@+id/editTextAlertDialogCaloriesFoodAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Número de calorias por porção"
        android:inputType="numberDecimal"/>

</LinearLayout>